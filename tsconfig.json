{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "outDir": "./pkg",
    "rootDir": "./ts",
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "noImplicitThis": true
  },
  "exclude": [
    "lib",
    "node_modules",
    "**/*.wasm"
  ],
  "typeRoots": [
    "./ts/types/"
  ]
}
